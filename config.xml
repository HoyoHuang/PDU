<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.pdu" version="1.0.1.19" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>PDU</name>
    <description>
        PDU
    </description>
    <author email="service@mj-app.com.tw" href="http://www.mj-app.com.tw">
        PhoneGap Team
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#ee6e73" />
    <preference name="StatusBarStyle" value="blacktranslucent" />

    <!--<plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.3" />-->
